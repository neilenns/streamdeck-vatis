    "@rollup/plugin-typescript": "^12.1.0",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "~20.15.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "markdownlint": "^0.37.2",
    "markdownlint-cli": "^0.43.0",
    "rollup": "^4.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.18.2"
  },
